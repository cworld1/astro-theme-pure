---
import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'

import { Paginator, PostPreview } from 'astro-pure/components/pages'
import { getBlogCollectionByLocale, getUniqueTagsWithCount, sortMDByDate } from 'astro-pure/server'
import { Button, Icon } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import config from '@/site-config'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { useTranslations } from 'astro-pure/utils'
import { i18n } from 'astro:config/client'

export const prerender = true

export const getStaticPaths = (async ({ paginate }) => {
  const collections = sortMDByDate(await getBlogCollectionByLocale(i18n!.defaultLocale))
  const uniqueTags = getUniqueTagsWithCount(collections).map(([tag]) => tag)
  const collectionsCount = collections.length
  return paginate(collections, {
    pageSize: config.content.blogPageSize,
    props: { uniqueTags, collectionsCount }
  })
}) satisfies GetStaticPaths

interface Props {
  page: Page<CollectionEntry<'blog'>>
  uniqueTags: string[]
  collectionsCount: number
}

const { page, uniqueTags, collectionsCount } = Astro.props as Props

const archivesHref = getRelativeLocaleUrl(Astro.currentLocale as string, '/archives')
const listTagsHref = getRelativeLocaleUrl(Astro.currentLocale as string, '/tags')
const tagHref = (tag: string) => getRelativeLocaleUrl(Astro.currentLocale as string, `/tags/${tag}`)
const { t } = useTranslations(['common', 'blog'], Astro.currentLocale)
const meta = {
  description: t('description'),
  title: t('title')
}

const paginationProps = {
  ...(page.url.prev && {
    prevUrl: {
      text: t('pagination.previous_posts'),
      url: page.url.prev
    }
  }),
  ...(page.url.next && {
    nextUrl: {
      text: t('pagination.next_posts'),
      url: page.url.next
    }
  })
}

---

<PageLayout {meta}>
  <Button title={t('navigation.back')} href={getRelativeLocaleUrl(Astro.currentLocale as string, '/')} variant='back' />
  <main class='mt-6 lg:mt-10'>
    <div id='content-header' class='animate'>
      <h1 class='mb-6 mt-6 text-3xl font-medium sm:mt-10'>{t('title')}</h1>
    </div>
    {
      page.data.length === 0 ? (
        <p>{t('no_posts')}</p>
      ) : (
        <div class='grid gap-y-16 sm:grid-cols-[3fr_1fr] sm:gap-x-8'>
          <section aria-label='Blog posts list' class='animate' id='content'>
            {/* header */}
            <div class='mb-3 flex flex-col justify-between text-sm sm:mb-5 sm:flex-row'>
              <span class='text-muted-foreground'>
                {t('pagination.page_status_posts', {
                  page: page.currentPage,
                  count: page.data.length,
                  total: collectionsCount
                })}
              </span>
              <a aria-label={t('archives.view_all')} href={archivesHref} data-astro-prefetch>
                {t('archives.view_all')}
              </a>
            </div>
            {/* posts */}
            <ul class='flex flex-col gap-y-4 text-start'>
              {page.data.map((post) => (
                <PostPreview post={post} detailed />
              ))}
            </ul>
            <Paginator {...paginationProps} />
          </section>

          {/* sidebar */}
          {!!uniqueTags.length && (
            <aside class='animate' id='sidebar'>
              <h2 class='mb-4 flex items-center text-lg font-medium'>
                <Icon name='tag-2' class='me-2' />
                {t('tags.title')}
              </h2>
              <ul class='text-bgColor flex flex-wrap gap-2'>
                {
                  // Only show top 50 tags in sidebar
                  uniqueTags.slice(0, 50).map((tag) => (
                    <li>
                      <Button title={tag} href={tagHref(tag)} variant='pill' />
                    </li>
                  ))
                }
              </ul>
              <span class='mt-4 block sm:text-end'>
                <a aria-label={t('tags.view_all')} href={listTagsHref} data-astro-prefetch>
                  {t('tags.view_all')}
                </a>
              </span>
            </aside>
          )}
        </div>
      )
    }
  </main>
</PageLayout>
