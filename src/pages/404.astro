---
import { Button } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import { useTranslations } from 'astro-pure/utils'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { i18n } from 'astro:config/client'

const { t } = useTranslations(['common'], Astro.currentLocale)
const meta = {
  description: t('not_found_description'),
  title: '404'
}
---

<PageLayout {meta}>
  <div class='px-4 py-10 text-center sm:px-6 lg:px-8'>
    <h1 class='block text-7xl font-bold sm:text-9xl'>404</h1>
    <p class='mt-3 text-muted-foreground'>Oops, something went wrong.</p>
    <p class='text-lg'>Sorry, we couldn't find your page.</p>
    <Button title='Back to home' href={getRelativeLocaleUrl(i18n?.defaultLocale || 'en')} variant='ahead' class='mt-5' />
  </div>
</PageLayout>
