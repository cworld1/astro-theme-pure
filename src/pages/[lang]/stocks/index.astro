---
import type { GetStaticPaths } from 'astro'
import type { CollectionEntry } from 'astro:content'
import { getCollection } from 'astro:content'
import { languages, useTranslations } from '@/i18n/ui'

import { Button, Icon } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'

export const prerender = true

export const getStaticPaths = (async () => {
  return Object.keys(languages).map((lang) => ({
    params: { lang }
  }))
}) satisfies GetStaticPaths

const { lang } = Astro.params
const t = useTranslations(lang as any)

// Get all stocks for this language
const allStocks = await getCollection('stocks')
const langStocks = allStocks
  .filter((stock) => {
    const [stockLang] = stock.id.split('/')
    return stockLang === lang && !stock.data.draft
  })
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())

const meta = {
  description: t('stocks.desc'),
  title: t('stocks.title')
}

// Calculate statistics
const totalTrades = langStocks.length
const closedTrades = langStocks.filter((s) => s.data.status === 'closed').length
const openTrades = langStocks.filter((s) => s.data.status === 'open').length
const partialTrades = langStocks.filter((s) => s.data.status === 'partial').length

// Calculate average P&L
const tradesWithPL = langStocks.filter((s) => s.data.profitLoss !== undefined)
const avgPL =
  tradesWithPL.length > 0
    ? tradesWithPL.reduce((sum, s) => sum + (s.data.profitLoss || 0), 0) / tradesWithPL.length
    : 0
---

<PageLayout {meta}>
  <Button title={t('common.back')} href={`/${lang}`} variant='back' />
  <main class='mt-6 lg:mt-10'>
    <div id='content-header' class='animate'>
      <h1 class='mb-6 mt-6 text-3xl font-medium sm:mt-10'>{t('stocks.title')}</h1>
      <p class='text-muted-foreground mb-8'>{t('stocks.desc')}</p>
    </div>

    {/* Trading Statistics */}
    <div class='animate mb-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-4'>
      <div class='rounded-lg border p-4'>
        <div class='text-sm text-muted-foreground'>{t('stocks.all_trades')}</div>
        <div class='text-2xl font-bold'>{totalTrades}</div>
      </div>
      <div class='rounded-lg border p-4'>
        <div class='text-sm text-muted-foreground'>{t('stocks.status.closed')}</div>
        <div class='text-2xl font-bold'>{closedTrades}</div>
      </div>
      <div class='rounded-lg border p-4'>
        <div class='text-sm text-muted-foreground'>{t('stocks.status.open')}</div>
        <div class='text-2xl font-bold'>{openTrades}</div>
      </div>
      <div class='rounded-lg border p-4'>
        <div class='text-sm text-muted-foreground'>{t('stocks.pl')} (Avg)</div>
        <div
          class:list={[
            'text-2xl font-bold',
            avgPL > 0 ? 'text-green-600' : avgPL < 0 ? 'text-red-600' : ''
          ]}
        >
          {avgPL > 0 ? '+' : ''}{avgPL.toFixed(2)}%
        </div>
      </div>
    </div>

    {/* Trading Records Table */}
    <div class='animate'>
      <h2 class='mb-4 flex items-center text-lg font-medium'>
        <Icon name='tag-2' class='me-2' />
        {t('stocks.all_trades')}
      </h2>

      {
        langStocks.length === 0 ? (
          <p class='text-muted-foreground'>{t('home.no_posts')}</p>
        ) : (
          <div class='overflow-x-auto'>
            <table class='w-full border-collapse'>
              <thead>
                <tr class='border-b'>
                  <th class='p-3 text-left'>{t('stocks.ticker')}</th>
                  <th class='p-3 text-left hidden sm:table-cell'>{t('stocks.market')}</th>
                  <th class='p-3 text-left'>{t('stocks.entry_date')}</th>
                  <th class='p-3 text-left hidden md:table-cell'>{t('stocks.exit_date')}</th>
                  <th class='p-3 text-left'>{t('stocks.status')}</th>
                  <th class='p-3 text-right'>{t('stocks.pl')}</th>
                </tr>
              </thead>
              <tbody>
                {langStocks.map((stock) => {
                  const statusText = t(`stocks.status.${stock.data.status}` as any)
                  const pl = stock.data.profitLoss

                  return (
                    <tr class='border-b hover:bg-muted/50 transition-colors'>
                      <td class='p-3'>
                        <a
                          href={`/${lang}/stocks/${stock.id.split('/')[1]}`}
                          class='font-medium hover:underline'
                        >
                          {stock.data.ticker}
                        </a>
                      </td>
                      <td class='p-3 hidden sm:table-cell text-muted-foreground'>
                        {stock.data.market || '-'}
                      </td>
                      <td class='p-3 text-sm text-muted-foreground'>
                        {stock.data.entryDate
                          ? new Date(stock.data.entryDate).toLocaleDateString(
                              lang === 'zh' ? 'zh-CN' : 'en-US'
                            )
                          : '-'}
                      </td>
                      <td class='p-3 text-sm text-muted-foreground hidden md:table-cell'>
                        {stock.data.exitDate
                          ? new Date(stock.data.exitDate).toLocaleDateString(
                              lang === 'zh' ? 'zh-CN' : 'en-US'
                            )
                          : '-'}
                      </td>
                      <td class='p-3'>
                        <span
                          class:list={[
                            'px-2 py-1 rounded text-xs',
                            stock.data.status === 'closed' && 'bg-gray-100 text-gray-800',
                            stock.data.status === 'open' && 'bg-blue-100 text-blue-800',
                            stock.data.status === 'partial' && 'bg-yellow-100 text-yellow-800'
                          ]}
                        >
                          {statusText}
                        </span>
                      </td>
                      <td
                        class:list={[
                          'p-3 text-right font-medium',
                          pl && pl > 0 ? 'text-green-600' : pl && pl < 0 ? 'text-red-600' : ''
                        ]}
                      >
                        {pl !== undefined ? `${pl > 0 ? '+' : ''}${pl.toFixed(2)}%` : '-'}
                      </td>
                    </tr>
                  )
                })}
              </tbody>
            </table>
          </div>
        )
      }
    </div>

    {/* Recent Posts */}
    <div class='animate mt-12'>
      <h2 class='mb-4 text-lg font-medium'>{t('home.more_posts')}</h2>
      <ul class='flex flex-col gap-4'>
        {
          langStocks.slice(0, 5).map((stock) => (
            <li class='border-b pb-4 last:border-0'>
              <a href={`/${lang}/stocks/${stock.id.split('/')[1]}`} class='group block'>
                <div class='flex items-start justify-between gap-4'>
                  <div class='flex-1'>
                    <h3 class='font-medium group-hover:underline mb-1'>{stock.data.title}</h3>
                    <p class='text-sm text-muted-foreground line-clamp-2'>
                      {stock.data.description}
                    </p>
                    <div class='mt-2 flex flex-wrap gap-2 text-xs text-muted-foreground'>
                      <span>{stock.data.ticker}</span>
                      <span>â€¢</span>
                      <span>
                        {new Date(stock.data.publishDate).toLocaleDateString(
                          lang === 'zh' ? 'zh-CN' : 'en-US'
                        )}
                      </span>
                    </div>
                  </div>
                  {stock.data.profitLoss !== undefined && (
                    <div
                      class:list={[
                        'text-lg font-bold shrink-0',
                        stock.data.profitLoss > 0
                          ? 'text-green-600'
                          : stock.data.profitLoss < 0
                            ? 'text-red-600'
                            : ''
                      ]}
                    >
                      {stock.data.profitLoss > 0 ? '+' : ''}
                      {stock.data.profitLoss.toFixed(1)}%
                    </div>
                  )}
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</PageLayout>
