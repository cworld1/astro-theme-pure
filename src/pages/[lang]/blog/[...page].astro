---
import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'
import { defaultLang, languages, ui, useTranslations } from '@/i18n/ui'

import { Paginator, PostPreview } from 'astro-pure/components/pages'
import { getBlogCollection, getUniqueTagsWithCount, sortMDByDate } from 'astro-pure/server'
import { Button, Icon } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import config from '@/site-config'

export const prerender = true

export const getStaticPaths = (async ({ paginate }) => {
  const allPosts = sortMDByDate(await getBlogCollection())

  return Object.keys(languages).flatMap((lang) => {
    const langPosts = allPosts.filter((post) => {
      // Assuming ID format: lang/slug...
      const [postLang] = post.id.split('/')
      return postLang === lang
    })

    // Filter tags for this language
    const uniqueTags = getUniqueTagsWithCount(langPosts).map(([tag]) => tag)
    const collectionsCount = langPosts.length

    return paginate(langPosts, {
      params: { lang },
      pageSize: config.content.blogPageSize,
      props: { uniqueTags, collectionsCount, lang }
    })
  })
}) satisfies GetStaticPaths

interface Props {
  page: Page<CollectionEntry<'blog'>>
  uniqueTags: string[]
  collectionsCount: number
  lang: string
}

const { page, uniqueTags, collectionsCount, lang } = Astro.props
const t = useTranslations(lang as any)

const meta = {
  description: 'Some posts or archives of my blog',
  title: t('nav.blog')
}

const paginationProps = {
  ...(page.url.prev && {
    prevUrl: {
      text: t('blog.pagination.prev'),
      url: page.url.prev
    }
  }),
  ...(page.url.next && {
    nextUrl: {
      text: t('blog.pagination.next'),
      url: page.url.next
    }
  })
}
---

<PageLayout {meta}>
  <Button title={t('common.back')} href={`/${lang}`} variant='back' />
  <main class='mt-6 lg:mt-10'>
    <div id='content-header' class='animate'>
      <h1 class='mb-6 mt-6 text-3xl font-medium sm:mt-10'>{t('nav.blog')}</h1>
    </div>
    {
      page.data.length === 0 ? (
        <p>No posts yet.</p>
      ) : (
        <div class='grid gap-y-16 sm:grid-cols-[3fr_1fr] sm:gap-x-8'>
          <section aria-label='Blog posts list' class='animate' id='content'>
            {/* header */}
            <div class='mb-3 flex flex-col justify-between text-sm sm:mb-5 sm:flex-row'>
              <span class='text-muted-foreground'>
                Page {page.currentPage} - Showing {page.data.length} of {collectionsCount} posts
              </span>
              <a aria-label='View all blog by years' href={`/${lang}/archives`} data-astro-prefetch>
                {t('blog.view_all_years')}
              </a>
            </div>
            {/* posts */}
            <ul class='flex flex-col gap-y-4 text-start'>
              {page.data.map((post) => (
                <PostPreview {post} detailed />
              ))}
            </ul>
            <Paginator {...paginationProps} />
          </section>

          {/* sidebar */}
          {!!uniqueTags.length && (
            <aside class='animate' id='sidebar'>
              <h2 class='mb-4 flex items-center text-lg font-medium'>
                <Icon name='tag-2' class='me-2' />
                {t('tags.title')}
              </h2>
              <ul class='text-bgColor flex flex-wrap gap-2'>
                {
                  // Only show top 50 tags in sidebar
                  uniqueTags.slice(0, 50).map((tag) => (
                    <li>
                      <Button
                        title={t(`tag.${tag.toLowerCase()}` as any) || tag}
                        href={`/${lang}/tags/${tag}`}
                        variant='pill'
                      />
                    </li>
                  ))
                }
              </ul>
              <span class='mt-4 block sm:text-end'>
                <a aria-label='View all blog categories' href={`/${lang}/tags`} data-astro-prefetch>
                  {t('tags.view_all')}
                </a>
              </span>
            </aside>
          )}
        </div>
      )
    }
  </main>
</PageLayout>
